{
  "name": "greenhouse-project",
  "private": true,
  "version": "1.0.0",
  "releaseNotes": "node js controller initial version",
  "description": "A monorepo for the greenhouse environment controller and frontends.",
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start:controller": "npm start --workspace=@greenhouse-project/controller",
    "dev:frontend": "npm run dev --workspace=apps/frontend-nextjs",
    "test": "npm test --workspaces --if-present",
    "lint": "eslint .",
    "lint:json": "eslint . --ext .json",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^13.24.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "opengpio": "^2.0.2"
  }
}
